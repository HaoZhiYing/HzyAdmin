<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0;net7.0</TargetFrameworks>
		<!--<Nullable>enable</Nullable>-->
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DocumentationFile>HZY.Infrastructure.xml</DocumentationFile>
		<NoWarn>1701;1702;1591</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="HZY.Framework.AutoRegisterIOC" Version="1.0.0" />
		<PackageReference Include="HZY.Framework.DynamicApiController" Version="1.0.2" />
		<PackageReference Include="AutoMapper" Version="12.0.1" />
		<PackageReference Include="AutoMapper.Extensions.Microsoft.DependencyInjection" Version="12.0.0" />
		<PackageReference Include="Flurl.Http" Version="3.2.4" />
		<PackageReference Include="SharpZipLib" Version="1.4.1" />
		<PackageReference Include="StackExchange.Redis" Version="2.6.90" />
		<PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="6.26.0" />
		<PackageReference Include="UAParser" Version="3.1.47" />
		<PackageReference Include="NPOI" Version="2.6.0" />
		<PackageReference Include="Serilog.AspNetCore" Version="6.1.0" />
		<PackageReference Update="Microsoft.SourceLink.GitHub" Version="1.1.1" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
		<PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="6.0.13" />
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="6.0.11" />
		<PackageReference Include="Zyx.MemoryMQ" Version="1.0.3" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)' == 'net7.0'">
		<PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="7.0.2" />
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="7.0.0" />
		<PackageReference Include="Zyx.MemoryMQ" Version="1.0.4" />
	</ItemGroup>
	<ItemGroup>
		<None Update="HZY.Infrastructure.xml">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<GenerateDocumentationFile>true</GenerateDocumentationFile>
		</None>
	</ItemGroup>

</Project>
