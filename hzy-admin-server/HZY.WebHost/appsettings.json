{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  // 如果发布后想要切换 配置环境 需要在 发布文件根目录的 web.config </aspNetCore> 此节点上方 添加 如下节点：
  // <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" /><!--Development--></environmentVariables>
  // 参考地址:https://www.lmlphp.com/user/16538/article/item/529521/
  //
  //=======================公共环境配置 =================================
  "AppConfigurationOptions": {
    // 程序标题
    "AppTitle": "HzyAdminSpa",
    "JwtValidAudience": "JwtKeyName",
    "JwtValidIssuer": "JwtKeyName",
    "JwtIssuerSigningKey": "1CC76841-F25D-4389-89FE-0F9451163CF1",
    //ajax请求头key名称
    "AuthorizationKeyName": "Authorization",
    //超级管理员角色id
    "AdminRoleId": "18fa4771-6f58-46a3-80d2-6f0f5e9972e3",
    //系统菜单id
    "SysMenuId": 14,
    //命名空间前缀
    "Namespace": "HZY",
    //api 白名单
    "ApiWhiteList": "/MonitorEFCore/|/job/",
    //是否监控EFCore程序
    "IsMonitorEFCore": true,
    //是否拦截编辑 添加、修改、删除
    "IsInterceptEdit": false,
    //是否运行 Quartz Task
    "IsRunQuartzTask": false,
    //dbset 注册配置
    "DbContextInfo": {
      // 数据库实体程序集名称
      "DbSetScanDllName": "HZY.Models",
      // 数据库实体命名空间
      "DbSetScanNamespace": "HZY.Models.Entities",
      // 数据表命名规则配置
      // Default（默认类型  请使用驼峰命名法）、SnakeCase （蛇形命名法）、UpperSnakeCase （全大写蛇形命名法）、 Upper （全大写命名）、Lower（全小写命名）
      "NameRuleType": "SnakeCase"
    },
    //代码生成导入项目 默认配置
    "AutoImprot": {
      // 整个项目所在文件夹名称 类似: D:/Gitee/HzyAdmin  就写 HzyAdmin
      "ProjectRootPath": "HzyAdmin",
      // 所属项目下的位置 以配置的ProjectPath下级为开始
      // 如： D:/Gitee/HzyAdmin/hzy-admin-server/HZY.Models/Entities/
      // 只需填写以 ProjectPath 往下的位置
      "ModelPath": "hzy-admin-server/HZY.Models/Entities/App/",
      "ServicePath": "hzy-admin-server/HZY.Services.Admin/App/",
      "ControllerPath": "hzy-admin-server/HZY.Controllers.Admin/App/",
      "IndexVuePath": "hzy-admin-client/src/views/app/",
      "InfoVuePath": "hzy-admin-client/src/views/app/",
      "ServiceJsPath": "hzy-admin-client/src/service/app/",
      // 文件已存在是是否覆盖  否的话生成代码重复会在后面加一个时间
      "IsCover": false
    },
    "FileManager": {
      // 返回图片所在服务器的根路径
      "ServerUrl": "http://localhost:5600/upload/",
      // 文件保存路径设置 当前配置为 wwwroot/upload/ 下
      "DirectoryUrl": "/upload/",
      // 允许请求最大长度
      "MaxRequestBodySize": "1gb",
      // 允许文件最大长度 可代码动态设置 可选单位 B,KB,MB,GB
      "MaxFileSizeLimit": "1gb",
      // 设置允许上传文件格式 | 分割
      "AllowExtensions": ".png|.jpg"
    }
  }
}